<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.steamsearchapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_nav_search"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_nav_search"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubSearch">
        <activity android:name=".FeaturedActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SteamWishlistActivity"/>
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AppDetailActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/Theme.GitHubSearch.NoActionBar">
        </activity>
    </application>

</manifest>